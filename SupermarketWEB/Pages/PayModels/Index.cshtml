@page
@model SupermarketWEB.Pages.PayModels.IndexModel
@{
    ViewData["Title"] = "Index Pay Models";
}
<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<h1>Index Pay Models</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PayModels[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayModels[0].Observation)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PayModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observation)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
